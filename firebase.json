{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "headers": [{
      "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
      "headers": [{
        "key": "Access-Control-Allow-Origin",
        "value": "*"
      }]
    }],
    "public": "public",
    "rewrites": [{
      "source": "**",
      "destination": "/index.html"
    }]
  }
}
